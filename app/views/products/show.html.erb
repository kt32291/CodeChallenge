<% if notice != nil %>
  <p class="bg-success notice"><%= notice %></p>
<% end %>
<div class="products_container">
  <div class="col-md-5">
    <%= image_tag @product.pic.url %>
  </div>
  <div class="col-md-7">
    <h2><%= @product.title %></h2>
    <p><%= @product.description %></p>
    <h2><%= number_to_currency(@product.price) %></h2>
    <%= link_to "Purchase #{@product.title}", "/orders/new/#{@product.id}", :class => "btn btn-primary" %>
  </div>
  <div class="col-md-12 clearfix"></div>
  <button class="btn btn-default reveal_orders">See <%= @product.title %> Orders</button>
  <div class="product_orders">
    <%= render template: 'orders/index' %>
  </div>
</div>
